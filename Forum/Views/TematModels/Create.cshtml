@model Forum.Models.TematModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body style="background-color : silver">

    <h4>Stwórz Temat</h4>
    <hr />
    <div style="text-align :center">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Temat" class="control-label">Temat</label>
                    <br />
                    <input asp-for="Temat" class="form-control" />
                    <span asp-validation-for="Temat" class="text-danger"></span>
                </div>
               
                <div hidden class="form-group">
                    <label asp-for="Tworca" class="control-label"></label>
                    <input asp-for="Tworca" value=@User.Identity.Name class="form-control" />
                    <span asp-validation-for="Tworca" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
