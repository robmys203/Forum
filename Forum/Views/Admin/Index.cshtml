@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/site.css" />
    <title>Index</title>
</head>
<body>
    
    <table cellspacing="0" cellpadding="0" border="1" style="width: 100%;" bgcolor="gray" >
        <thead>
            <tr>
                
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NormalizedUserName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>

                <td  >
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="obramowanie">
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td  >
                    @Html.DisplayFor(modelItem => item.NormalizedUserName)
                </td >
                <td  >
                    <a asp-action="Detail" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="addRole" asp-route-id="@item.Id">addRole</a>
                    <a asp-action="removeRoleFromUser" asp-route-id="@item.Id">RemoveRole</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>